@model PaginatedList<RentalKendaraan_20180140108.Models.Kendaraan>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Tambah Data Baru</a>


</p>

@using (Html.BeginForm("Index", "Kendaraan", FormMethod.Get))
{
    <p>
        Ketersediaan: @Html.DropDownList("ktsd", "Pilih Ketersediaan")
        Cari Data : @Html.TextBox("searchString")
        <input type="submit" value="Filter" />
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @*Html.DisplayName("Ketersediaan")*@
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParn"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Ketersediaan</a>
            </th>
            <th>
                @Html.DisplayName("NamaKendaraan")
            </th>
            <th>
                @Html.DisplayName("NoPolisi")
            </th>
            <th>
                @Html.DisplayName("NoStnk")
            </th>
            <th>
                @Html.DisplayName("IdJenisKendaraan")
            </th>
            <th>
                @Html.DisplayName("Ketersediaan")
            </th>
            <th>
                @Html.DisplayName("IdKendaraanNavigation")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaKendaraan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoPolisi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoStnk)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdJenisKendaraan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ketersediaan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdKendaraanNavigation.IdJenisKendaraan)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdKendaraan">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdKendaraan">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdKendaraan">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next

</a>
