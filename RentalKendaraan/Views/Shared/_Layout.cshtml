<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RentalKendaraan</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RentalKendaraan</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a asp-area="" asp-controller="Home" aspaction="Index">Home</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a asp-area="" asp controller="Role" asp-action="Index">Role</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" datatoggle="dropdown">Daftar Rental<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a asp-area="" asp-controller="Customer" asp-action="Index">Customer</a></li>
                                    <li><a asp-area="" asp-controller="Peminjaman" asp-action="Index">Peminjaman</a></li>
                                    <li><a asp-area="" asp-controller="Pengembalian" asp-action="Index">Pengembalian</a></li>
                                    <li><a asp-area="" asp-controller="Kendaraan" asp-action="Index">Kendaraan</a></li>
                                    <li><a asp-area="" asp-controller="JenisKendaraan" asp-action="Index">Jenis Kendaraan</a></li>
                                    <li><a asp-area="" asp-controller="KondisiKendaraan" asp-action="Index">Kondisi Kendaraan</a></li>
                                    <li><a asp-area="" asp-controller="Jaminan" asp-action="Index">Jaminan</a></li>
                                    <li><a asp-area="" asp-controller="Gender" asp-action="Index">Gender</a></li>
                                </ul>
                            </li>
                        }
                        else if (User.IsInRole("Manager"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Daftar Rental<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a asp-area="" asp-controller="Peminjaman" asp-action="Index">Peminjaman</a></li>
                                    <li><a asp-area="" asp-controller="Pengembalian" asp-action="Index">Pengembalian</a></li>
                                </ul>
                            </li>
                        }
                        else if (User.IsInRole("Kasir"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Daftar Rental<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a asp-area="" asp-controller="Customer" asp-action="Index">Customer</a></li>
                                    <li><a asp-area="" asp-controller="Peminjaman" asp-action="Index">Peminjaman</a></li>
                                    <li><a asp-area="" asp-controller="Pengembalian" asp-action="Index">Pengembalian</a></li>
                                    <li><a asp-area="" asp-controller="Kendaraan" asp-action="Index">Kendaraan</a></li>
                                    <li><a asp-area="" asp-controller="JenisKendaraan" asp-action="Index">Jenis Kendaraan</a></li>
                                    <li><a asp-area="" asp-controller="KondisiKendaraan" asp-action="Index">Kondisi Kendaraan</a></li>
                                    <li><a asp-area="" asp-controller="Jaminan" asp-action="Index">Jaminan</a></li>
                                </ul>
                            </li>
                        }


                    </ul>
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - RentalKendaraan - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
